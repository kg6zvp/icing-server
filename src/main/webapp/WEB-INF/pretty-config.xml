<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
								http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

	<url-mapping>
		<pattern value="/web/sources/new" />
		<view-id value="/web/sources/edit.xhtml" />
	</url-mapping>

	<url-mapping>
		<pattern value="/web/sources/#{name}/edit" />
		<view-id value="/web/sources/edit.xhtml" />
	</url-mapping>
	
	<url-mapping>
		<pattern value="/web/sources/#{source}/browse" />
		<view-id value="/web/sources/browse/index.xhtml" />	
	</url-mapping>
	
	<url-mapping>
		<pattern value="/web/raw/#{source}" />
		<view-id value="/web/raw/index.xhtml"/>
	</url-mapping>
	
	<url-mapping>
		<pattern value="/web/library/movies/#{movie}" />
		<view-id value="/web/library/movies/view.xhtml"/>
	</url-mapping>
</pretty-config>
